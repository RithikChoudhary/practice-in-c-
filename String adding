#include <iostream>
#include <string>
using namespace std;

int main() {
   string a,b;
    string tmp;
    cin>>a;
    cin>>b;
    cout<<a.size()<<" "<<b.size()<<endl<<(a+b)<<endl;
    tmp[0]=a[0];
    tmp[1]=b[0];
    a[0]=tmp[1];
    b[0]=tmp[0];
    cout<<a<<" ";
    cout<<b;
  
    return 0;
}
